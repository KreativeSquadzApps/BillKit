<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.widget.TextView" />
        <import type="android.view.View" />
        <import type="com.kreativesquadz.billkit.adapter.BindingAdaptersKt" />
        <variable
            name="taxGst"
            type="com.kreativesquadz.billkit.model.InvoiceTax" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/tvtaxType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="@{taxGst.taxType}"
            tools:text="GST"
            android:textSize="12sp"
            android:textColor="@color/text_color_main"
            app:layout_constraintEnd_toStartOf="@+id/tvtaxableAmount"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvtaxableAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            tools:text="888.0"
            android:text="@{taxGst.taxableAmount}"
            android:textSize="12sp"
            android:textColor="@color/text_color_main"
            app:layout_constraintEnd_toStartOf="@+id/tvrates"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvtaxType"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvrates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text='@{taxGst.rate + "%"}'
            android:textSize="12sp"
            tools:text="20 %"
            android:textColor="@color/text_color_main"
            app:layout_constraintEnd_toStartOf="@+id/tvtotals"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvtaxableAmount"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvtotals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="end"
            android:textSize="12sp"
            android:text="@{taxGst.taxAmount}"
            tools:text="177.6"
            android:textColor="@color/text_color_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tvrates"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
