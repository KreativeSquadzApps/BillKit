<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<data>
    <variable
        name="invoiceItem"
        type="com.kreativesquadz.billkit.model.InvoiceItem" />
    <variable
        name="invoiceName"
        type="String" />
</data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_n_black"
        android:clipToPadding="true"
        android:clipChildren="true"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lite_grey_200"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:padding="@dimen/_10dp"
                android:text="Edit Item"
                android:textSize="@dimen/txt_18sp"
                android:textColor="@color/text_color_main"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="-16dp"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:layout_width="34dp"
                android:layout_weight="1"
                android:id="@+id/btnDismiss"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@android:drawable/ic_delete"
                android:layout_height="34dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                app:endIconMode="none"
                android:padding="3dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/txt_14sp"
                    android:padding="@dimen/_15dp"
                    android:editable="false"
                    android:textColor="@color/text_primary_n_dark"
                    android:text='@{invoiceName}'
                    android:id="@+id/etItemName"
                    android:hint="Item Name" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    app:endIconMode="none"
                    android:layout_weight="1"
                    android:padding="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/txt_14sp"
                        android:padding="@dimen/_15dp"
                        android:text="@{invoiceItem.unitPrice}"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/text_color_main"
                        android:inputType="number"
                        android:id="@+id/etPrice"
                        android:hint="Price" />
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:weightSum="5"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:layout_weight="2">

                        <TextView
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="24sp"
                            android:id="@+id/txtMinus"
                            android:gravity="center"
                            android:background="@drawable/corner_four_red"
                            android:textColor="@color/red"
                            android:text="-"/>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10dp"
                        app:endIconMode="none"
                        android:layout_weight="1"
                        android:padding="3dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <AutoCompleteTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/etQty"
                            android:textSize="@dimen/txt_14sp"
                            android:padding="@dimen/_15dp"
                            android:gravity="center"
                            android:textColor="@color/text_color_main"
                            android:text="@{invoiceItem.quantity}"
                            android:hint="Qty" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginBottom="@dimen/_15dp"
                        android:layout_weight="2">

                        <TextView
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="24sp"
                            android:id="@+id/txtPlus"
                            android:gravity="center"
                            android:background="@drawable/corner_four_grey"
                            android:textColor="@color/text_primary_n_dark"
                            android:text="+"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/btnupdate"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardUseCompatPadding="true"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_10dp"
                app:cardBackgroundColor="@color/btn_primary_n_dark"
                android:textColor="@color/text_color_heading"
                android:gravity="center">

                <TextView android:fontFamily="@font/montserrat_medium"
                    android:layout_width="match_parent"
                    android:id="@+id/update"
                    android:layout_height="match_parent"
                    android:text="Update"
                    android:padding="@dimen/_10dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/_30dp"
                android:background="@drawable/corner_four_red"
                android:gravity="center"
                android:padding="1dp"
                android:id="@+id/btnDelete"
                android:layout_marginStart="@dimen/_30dp"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="40dp"
                    android:padding="@dimen/_8dp"
                    android:src="@drawable/trash"/>

                <TextView
                    android:fontFamily="@font/montserrat_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="@dimen/_8dp"
                    android:textColor="@color/red"
                    android:text="Delete"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>
