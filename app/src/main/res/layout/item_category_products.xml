<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.widget.TextView" />
        <import type="com.kreativesquadz.hisabkitab.adapter.BindingAdaptersKt" />
        <variable
            name="products"
            type="com.kreativesquadz.hisabkitab.model.Product" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_margin="@dimen/_5dp"
            android:orientation="horizontal">

            <TextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/itemNameAmountQty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textStyle="bold"
                android:textColor="@color/text_color_main"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/txt_home_item"
                android:text="@{products.productName}"
                tools:text="2000"/>

            <TextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/itemTotalAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_home_item"
                android:gravity="end"
                android:layout_marginEnd="@dimen/_15dp"
                android:text='@{products.productPrice}'
                tools:text="2000"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
    </LinearLayout>

</layout>
