<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.inventory.tab.category.CategoryFrag">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                android:weightSum="5"
                android:padding="@dimen/_15dp"
                android:orientation="horizontal"
                android:background="@drawable/corner_four_grey">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:endIconMode="none"
                    android:layout_weight="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/etCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_10dp"
                        android:hint="Category Name" />
                </com.google.android.material.textfield.TextInputLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/addCategory"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_weight="3"
                    android:textStyle="bold"
                    android:layout_marginBottom="-5dp"
                    android:layout_marginStart="@dimen/_10dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:textColor="@color/text_color_heading"
                    android:gravity="center">

                    <TextView android:fontFamily="@font/montserrat_regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Add Category"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="@dimen/txt_12sp"
                        android:textColor="@color/text_color_heading_reverse"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10dp"
            android:background="@drawable/corner_four_grey"
            app:layout_constraintTop_toBottomOf="@id/searchView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_category"
            android:id="@+id/recyclerView"/>


    </LinearLayout>
</layout>
