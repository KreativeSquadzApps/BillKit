<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sharedViewModels"
            type="com.kreativesquadz.billkit.ui.home.tab.SharedViewModel" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">



                <RelativeLayout
                    android:id="@+id/rl_calc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/ll_calc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:id="@+id/iv_seven"
                                    android:layout_weight="1"
                                    android:layout_height="0dp"
                                    android:text="7"
                                    android:layout_marginStart="@dimen/_8dp"
                                    android:layout_marginEnd="@dimen/_8dp"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:layout_marginBottom="@dimen/_5dp"
                                    android:background="@drawable/corner_four_grey"
                                    android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_color_main"
                                    android:gravity="center"
                                    android:textSize="@dimen/txt_quick_sale"
                                    />


                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/iv_four"
                                android:layout_weight="1"
                                android:layout_height="0dp"
                                android:text="4"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_5dp"                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:textStyle="bold"
                                android:textColor="@color/text_color_main"
                                android:gravity="center"
                                android:textSize="@dimen/txt_quick_sale"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/iv_one"
                                android:layout_weight="1"
                                android:layout_height="0dp"
                                android:text="1"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_5dp"                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:textStyle="bold"
                                android:textColor="@color/text_color_main"
                                android:gravity="center"
                                android:textSize="@dimen/txt_quick_sale"
                                />


                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/iv_zero"
                                android:layout_weight="1"
                                android:layout_height="0dp"
                                android:text="0"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_5dp"                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:textStyle="bold"
                                android:textColor="@color/text_color_main"
                                android:gravity="center"
                                android:textSize="@dimen/txt_quick_sale" />


                        </LinearLayout> <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:id="@+id/iv_eight"
                                    android:layout_weight="1"
                                    android:layout_height="0dp"
                                    android:text="8"
                                    android:layout_marginStart="@dimen/_8dp"
                                    android:layout_marginEnd="@dimen/_8dp"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:layout_marginBottom="@dimen/_5dp"                                    android:background="@drawable/corner_four_grey"
                                    android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_color_main"
                                    android:gravity="center"
                                    android:textSize="@dimen/txt_quick_sale"
                                    />


                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/iv_five"
                                android:layout_weight="1"
                                android:layout_height="0dp"
                                android:text="5"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_5dp"                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:textStyle="bold"
                                android:textColor="@color/text_color_main"
                                android:gravity="center"
                                android:textSize="@dimen/txt_quick_sale"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/iv_two"
                                android:layout_weight="1"
                                android:layout_height="0dp"
                                android:text="2"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_5dp"                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:textStyle="bold"
                                android:textColor="@color/text_color_main"
                                android:gravity="center"
                                android:textSize="@dimen/txt_quick_sale"
                                />


                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/iv_double_zero"
                                android:layout_weight="1"
                                android:layout_height="0dp"
                                android:text="00"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_5dp"                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:textStyle="bold"
                                android:textColor="@color/text_color_main"
                                android:gravity="center"
                                android:textSize="@dimen/txt_quick_sale" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:id="@+id/iv_nine"
                                    android:layout_weight="1"
                                    android:layout_height="0dp"
                                    android:text="9"
                                    android:layout_marginStart="@dimen/_8dp"
                                    android:layout_marginEnd="@dimen/_8dp"
                                    android:layout_marginTop="@dimen/_5dp"
                                    android:layout_marginBottom="@dimen/_5dp"                                    android:background="@drawable/corner_four_grey"
                                    android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_color_main"
                                    android:gravity="center"
                                    android:textSize="@dimen/txt_quick_sale"
                                    />


                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/iv_six"
                                android:layout_weight="1"
                                android:layout_height="0dp"
                                android:text="6"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_5dp"                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:textStyle="bold"
                                android:textColor="@color/text_color_main"
                                android:gravity="center"
                                android:textSize="@dimen/txt_quick_sale"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/iv_three"
                                android:layout_weight="1"
                                android:layout_height="0dp"
                                android:text="3"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_5dp"                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:textStyle="bold"
                                android:textColor="@color/text_color_main"
                                android:gravity="center"
                                android:textSize="@dimen/txt_quick_sale"
                                />


                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/iv_dot"
                                android:layout_weight="1"
                                android:layout_height="0dp"
                                android:text="."
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_5dp"                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:textStyle="bold"
                                android:textColor="@color/text_color_main"
                                android:gravity="center"
                                android:textSize="@dimen/txt_quick_sale" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:weightSum="4"
                            android:layout_gravity="bottom"
                            android:background="@android:color/transparent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:id="@+id/iv_minus"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/_8dp"
                                android:layout_marginStart="@dimen/_8dp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_marginBottom="@dimen/_12dp"
                                android:background="@drawable/corner_four_grey"
                                android:onClick="@{() -> sharedViewModels.delete()}">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="20dp"
                                    android:src="@drawable/ic_delete">

                                </ImageView>

                            </LinearLayout>


                            <TextView
                                android:id="@+id/iv_multiply"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginTop="-8dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:layout_marginBottom="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/corner_four_grey"
                                android:gravity="center"
                                android:onClick="@{(view) -> sharedViewModels.getAmount(view)}"
                                android:text="X"
                                android:textColor="@color/text_color_main"
                                android:textSize="@dimen/txt_quick_sale"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:id="@+id/btnGenerateBill"
                                android:layout_height="0dp"
                                bind:cardCornerRadius="@dimen/_5dp"
                                bind:cardUseCompatPadding="true"
                                android:layout_marginTop="-5dp"
                                android:layout_marginStart="@dimen/_5dp"
                                android:layout_marginEnd="@dimen/_5dp"
                                android:textStyle="bold"
                                android:layout_weight="2"
                                bind:cardBackgroundColor="@color/colorPrimaryDark"
                                android:textColor="@color/text_color_heading"
                                android:gravity="center">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:id="@+id/iv_equals"
                                        android:layout_height="match_parent"
                                        android:text="Add\n Item"
                                        android:onClick="@{() -> sharedViewModels.addItem()}"
                                        android:textStyle="bold"
                                        android:gravity="center"
                                        android:textSize="20sp"
                                        android:textColor="@color/white"
                                        bind:neumorph_backgroundColor="@color/colorPrimaryDark"/>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </FrameLayout>



    </LinearLayout>

</layout>


