<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.widget.TextView" />
        <import type="com.kreativesquadz.billkit.adapter.BindingAdaptersKt" />
        <variable
            name="item"
            type="com.kreativesquadz.billkit.model.InvoiceItem" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView android:fontFamily="@font/montserrat_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_color_main"
            app:splitText="@{item.itemName}"
            tools:text="DummyItem1"/>
        <TextView android:fontFamily="@font/montserrat_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_color_main"
            android:text="@{item.quantity}"
            tools:text="Qty"/>
        <TextView android:fontFamily="@font/montserrat_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_color_main"
            android:text="@{item.unitPrice}"
            tools:text="Rate"/>
        <TextView android:fontFamily="@font/montserrat_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/text_color_main"
            android:layout_marginEnd="10dp"
            android:text="@{item.totalPrice}"
            tools:text="Total"/>



    </LinearLayout>

</layout>
