<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.widget.TextView" />
        <import type="com.kreativesquadz.billkit.adapter.BindingAdaptersKt" />
        <variable
            name="item"
            type="com.kreativesquadz.billkit.model.InvoiceItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardHeader"
        android:paddingBottom="@dimen/_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp">

            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/quantity"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_18sp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text='@{item.quantity +" x "}'
                tools:text="300 x "/>


            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_16sp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintStart_toEndOf="@+id/quantity"
                app:layout_constraintTop_toTopOf="parent"
                android:text='@{(item.itemName.split("\\(")[0])}'
                android:textStyle="bold"
                tools:text="Itemmmm"/>

            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_18sp"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintStart_toStartOf="@+id/tvItemName"
                app:layout_constraintTop_toBottomOf="@+id/tvItemName"
                android:text="@{item.unitPrice}"
                tools:text="450"/>



            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tvAvailableQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginTop="@dimen/_5dp"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_18sp"
                android:text="@{item.totalPrice}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="3000" />


            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_14sp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAvailableQty"
                android:text='@{item.taxRate+"%"}'
                tools:text="0.0%"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/lineView"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTotal"
                android:background="@color/lite_grey_200"/>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
