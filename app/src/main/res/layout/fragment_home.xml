<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="sharedViewModels"
            type="com.kreativesquadz.billkit.ui.home.tab.SharedViewModel" />
        <variable
            name="isItemAvailable"
            type="Boolean" />
        <variable
            name="isCameraOpen"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_color_heading_reverse"
        android:fitsSystemWindows="true"
        tools:context="ui.home.HomeFragment">


        <ImageView
            android:id="@+id/drawer_icon"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:padding="@dimen/_5dp"
            android:src="@drawable/drawer_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
            android:id="@+id/tv_Display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/text_color_heading_reverse"
            android:cursorVisible="true"
            android:ellipsize="start"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="bottom|right|center_vertical|center_horizontal|center"
            android:hint=" 0"
            android:text="@{sharedViewModels.amount}"
            android:paddingBottom="@dimen/half"
            android:scrollbars="vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_color_main"
            android:textColorHint="@android:color/black"
            android:textSize="30sp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/drawer_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="@dimen/_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemRecyclerView"
            app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
            android:layout_marginBottom="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="170dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="@{isItemAvailable ? View.VISIBLE : View.INVISIBLE}"
                android:background="@color/lite_grey_200">

                <TextView android:fontFamily="@font/montserrat_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:text="Clear Order"
                    android:layout_marginStart="@dimen/_10dp"
                    android:id="@+id/btnClearItems"/>

                <TextView android:fontFamily="@font/montserrat_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_main"
                    android:text='@{"Items : " + sharedViewModels.getInvoiceItemCount()}'
                    android:gravity="end"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:id="@+id/tvItemsCount"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabMode="fixed"
                        app:tabGravity="fill" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:visibility="@{isCameraOpen ? View.GONE : View.VISIBLE}"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{isCameraOpen ? View.VISIBLE : View.GONE}"
                    android:layout_margin="@dimen/_10dp">

                    <androidx.camera.view.PreviewView
                        android:id="@+id/preview_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/bottom_bar"
            app:cardElevation="@dimen/_10dp"
            android:paddingTop="@dimen/_10dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="5"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    app:cardCornerRadius="@dimen/_10dp"
                    app:cardElevation="4dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    app:cardUseCompatPadding="true"
                    android:id="@+id/btnBarcode"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_heading"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:src="@drawable/barcode" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/btnSavedOrder"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    app:cardCornerRadius="@dimen/_10dp"
                    app:cardElevation="4dp"

                    app:cardUseCompatPadding="true"
                    android:textColor="@color/text_color_heading">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15dp"
                        android:src="@drawable/saveorder">

                    </ImageView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/btnGenerateBill"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_10dp"
                    app:cardUseCompatPadding="true"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_5dp"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_weight="1"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    android:textColor="@color/text_color_heading"
                    android:gravity="center">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:textSize="15sp"
                            android:id="@+id/txtBill"
                            android:textColor="@color/text_color_heading_reverse"
                            android:layout_marginEnd="20dp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:text="Bill" />

                        <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_color_heading_reverse"
                            android:id="@+id/tvBill"
                            android:layout_marginStart="20dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/txtBill"
                            tools:text="0.0"
                            />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
