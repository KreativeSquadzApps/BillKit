<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="sharedViewModel"
            type="com.kreativesquadz.hisabkitab.ui.home.tab.SharedViewModel" />

        <variable
            name="viewModel"
            type="com.kreativesquadz.hisabkitab.ui.home.billDetails.split.SplitViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.billDetails.split.SplitFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_30dp"
            android:layout_marginStart="@dimen/_30dp"
            android:layout_marginTop="@dimen/_50dp"
            android:layout_marginBottom="@dimen/_50dp"
            android:background="@drawable/corner_four_grey"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_18sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20dp"
                android:textColor="@color/text_color_main"
                android:text="Total Amount"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:id="@+id/totalAmount"
                android:textColor="@color/text_primary_n_dark"
                android:textSize="@dimen/txt_22sp"
                tools:text="500" />


            <TextView
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_16sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20dp"
                android:textColor="@color/text_color_main"
                android:text="Cash"/>

            <EditText
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:textColor="@color/text_primary_n_dark"
                android:textSize="@dimen/txt_20sp"
                android:inputType="number"
                android:id="@+id/etCash"/>


            <TextView
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_16sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_30dp"
                android:textColor="@color/text_color_main"
                android:text="Online"/>

            <EditText
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:textColor="@color/text_primary_n_dark"
                android:textSize="@dimen/txt_20sp"
                android:inputType="number"

                android:id="@+id/etOnline"/>


            <TextView
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_16sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_30dp"
                android:textColor="@color/text_color_main"
                android:text="Credit"/>

            <EditText
                android:fontFamily="@font/montserrat_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:textColor="@color/text_primary_n_dark"
                android:textSize="@dimen/txt_20sp"
                android:editable="false"
                android:inputType="number"
                android:id="@+id/etCredit"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/saveBill"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_8dp"
                android:textStyle="bold"
                app:cardBackgroundColor="@color/btn_primary_n_dark"
                android:textColor="@color/text_color_heading"
                android:gravity="center">

                <TextView android:fontFamily="@font/montserrat_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save Bill"
                    android:padding="@dimen/_15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/txt_16sp"
                    android:textColor="@color/text_color_heading_reverse" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</layout>
