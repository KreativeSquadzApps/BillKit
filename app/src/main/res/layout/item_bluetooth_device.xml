<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.widget.TextView" />
        <import type="com.kreativesquadz.billkit.adapter.BindingAdaptersKt" />
        <variable
            name="device"
            type="android.bluetooth.BluetoothDevice" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/btnChangePrinter"
        android:layout_margin="@dimen/_10dp"
        android:background="@drawable/corner_four_grey"
        android:padding="16dp">

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:src="@drawable/printer_icon_v"
            android:contentDescription="@string/printer_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView android:fontFamily="@font/montserrat_medium"
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{device.name}"
                android:textSize="16sp"
                android:textColor="@color/text_primary_n_dark"
                android:textStyle="bold"
                tools:text="Default"/>

            <TextView android:fontFamily="@font/montserrat_medium"
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{device.address}"
                android:textSize="14sp"
                android:textColor="@color/text_color_main"
                tools:text="DC:0D:30:D6:0F:E0" />
        </LinearLayout>

    </LinearLayout>


</layout>
