<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<data>

</data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_n_black"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lite_grey"
            android:orientation="horizontal"
            >
            <TextView android:fontFamily="@font/montserrat_regular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="@dimen/_10dp"
                android:textSize="@dimen/txt_18sp"
                android:textColor="@color/text_color_main"
                android:text="Available Credit Notes" />

            <ImageView
                android:layout_width="34dp"
                android:layout_weight="1"
                android:id="@+id/btnDismiss"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@android:drawable/ic_delete"
                android:layout_height="34dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_marginStart="@dimen/_25dp"
            android:layout_marginEnd="@dimen/_25dp"
            app:endIconMode="none">

            <AutoCompleteTextView
                android:id="@+id/etCreditNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10dp"
                android:drawableStart="@drawable/search_icon"
                android:drawableTint="@color/text_color_main"
                android:textColor="@color/text_color_main"
                android:hint="Invoice No" />
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_15dp"

            android:id="@+id/recyclerView"/>



    </LinearLayout>
</layout>
