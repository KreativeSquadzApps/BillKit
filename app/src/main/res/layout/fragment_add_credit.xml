<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="customer"
            type="com.kreativesquadz.billkit.model.Customer" /> <!-- Replace "your.package.name" with your actual package name -->

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_n_black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:background="@drawable/corner_four_grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="16dp">

                    <!-- Customer Name -->
                    <TextView android:fontFamily="@font/montserrat_medium"
                        android:id="@+id/customerNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{"Customer Name : "+customer.CustomerName}'
                        android:textSize="@dimen/txt_16sp"
                        android:textColor="@color/text_primary_n_dark"
                        android:textStyle="bold"
                        android:paddingBottom="4dp"
                        tools:text="Customer Name :  DEMO" />

                    <!-- Shop Contact Number -->
                    <TextView android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/shopContactNumberTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text='@{"Contact Number : "+customer.ShopContactNumber}'
                        android:textColor="@color/text_color_main"
                        android:textSize="@dimen/txt_14sp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:paddingBottom="4dp"
                        tools:text="Contact Number : 9971380539" />


                    <!-- Credit Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:orientation="horizontal">
                        <TextView android:fontFamily="@font/montserrat_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_color_main"
                            android:textSize="@dimen/txt_14sp"
                            android:text="Outstanding Credit :  "
                            android:paddingBottom="4dp" />
                        <TextView
                            android:fontFamily="@font/montserrat_medium"
                            android:id="@+id/creditAmountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary_n_dark"
                            android:text="@{customer.creditAmount}"
                            android:textSize="@dimen/txt_16sp"

                            android:paddingBottom="4dp"
                            android:textStyle="bold"
                            tools:text="5500.00" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_16sp"
                    android:textColor="@color/text_color_main"
                    android:text="Add Amount"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10dp"
                app:endIconMode="none">

                <AutoCompleteTextView
                    android:id="@+id/etCreditAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="Amount" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/btnAddCredit"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    app:cardCornerRadius="@dimen/_5dp"
                    app:cardUseCompatPadding="true"
                    android:textStyle="bold"
                    app:cardBackgroundColor="@color/btn_primary_n_dark"
                    android:textColor="@color/text_color_heading"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_15dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:text="Add Credit"
                        android:textColor="@color/text_color_heading_reverse"
                        android:textSize="@dimen/txt_14sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_n_black"
                app:tabMode="fixed"
                app:tabGravity="fill" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</layout>
