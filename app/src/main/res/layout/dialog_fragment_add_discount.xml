<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.kreativesquadz.hisabkitab.ui.dialogs.DialogViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:fontFamily="@font/montserrat_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/totalAmountText"
                android:textColor="@color/text_color_main"
                android:textSize="20sp"
                android:text="Total Amount"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:onClick="@{() -> viewModel.getDiscountedText()}"
                android:src="@android:drawable/ic_delete"/>

        </FrameLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:background="@color/text_color_main"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10dp"
                android:weightSum="2">
                <TextView android:fontFamily="@font/montserrat_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_main"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:text="Cash Discount"/>
                <TextView android:fontFamily="@font/montserrat_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_color_main"
                    android:textSize="16sp"
                    android:text="Percentage Discount"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10dp"
                android:weightSum="2">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:hint="Amount"
                    android:id="@+id/tvCashDiscount"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:text="@={viewModel.dialogText}"
                    android:padding="8dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:hint="Percentage"
                    android:id="@+id/tvpercentage"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:text="@={viewModel.percentage}"
                    android:padding="8dp" />
            </LinearLayout>



        <TextView android:fontFamily="@font/montserrat_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/text_color_main"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20dp"
            android:text="New Total"/>
        <TextView android:fontFamily="@font/montserrat_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/totalAmount"
            android:textSize="26sp"
            android:layout_marginBottom="@dimen/_20dp"
            android:textColor="@color/text_color_main"
            android:gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textAllCaps="false"
            android:onClick="@{() -> viewModel.getDiscountedText()}"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</layout>
