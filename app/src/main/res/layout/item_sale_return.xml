<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.widget.TextView" />
        <import type="com.kreativesquadz.billkit.adapter.BindingAdaptersKt" />
        <variable
            name="item"
            type="com.kreativesquadz.billkit.model.InvoiceItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/cardHeader"
            android:paddingTop="@dimen/_20dp"
            android:paddingStart="@dimen/_10dp"
            android:paddingEnd="@dimen/_10dp"
            android:background="@color/lite_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tvItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text='@{(item.itemName.split(" ")[0])}'
                android:textStyle="bold"
                tools:text="Itemmmm"/>

            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_16sp"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvItemName"
                android:text="Price : " />

            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_16sp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintStart_toEndOf="@+id/txtPrice"
                app:layout_constraintTop_toTopOf="@+id/txtPrice"
                android:text="@{item.unitPrice}"
                tools:text="300"/>


            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtAvailableQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_14sp"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@+id/tvAvailableQty"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Available qty : " />

            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tvAvailableQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10dp"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="3" />

            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_14sp"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toStartOf="@id/tvTotal"
                app:layout_constraintTop_toTopOf="@+id/tvTotal"
                android:text="Total : " />

            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_14sp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAvailableQty"
                android:text="@{item.totalPrice}"
                tools:text="100"/>

            <androidx.appcompat.widget.AppCompatTextView android:fontFamily="@font/montserrat_regular"
                android:id="@+id/txtReturnQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_main"
                android:textSize="@dimen/txt_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_10dp"
                android:text="Return Qty :  "
                android:layout_marginStart="@dimen/_10dp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="@dimen/_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtReturnQty"
                app:layout_constraintBottom_toBottomOf="@+id/txtReturnQty">


                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/qtyMinus"
                    android:textSize="20sp"
                    android:layout_weight="1"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:inputType="number"
                    android:paddingStart="@dimen/_20dp"
                    android:id="@+id/etQty"
                    android:background="@drawable/rectangle_outline_view"
                    android:layout_weight="1"
                    />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/qtyAdd"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    />





            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>
