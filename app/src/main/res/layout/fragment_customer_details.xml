<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="customer"
            type="com.kreativesquadz.hisabkitab.model.Customer" /> <!-- Replace "your.package.name" with your actual package name -->

    </data>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_n_black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:background="@drawable/corner_four_grey"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:padding="16dp">

                            <!-- Customer Name -->
                            <TextView android:fontFamily="@font/montserrat_medium"
                                android:id="@+id/customerNameTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{customer.CustomerName}"
                                android:textSize="@dimen/txt_16sp"
                                android:textColor="@color/text_primary_n_dark"
                                android:textStyle="bold"
                                android:paddingBottom="4dp"
                                tools:text="DEMO" />

                            <!-- Shop Contact Number -->
                            <TextView android:fontFamily="@font/montserrat_regular"
                                android:id="@+id/shopContactNumberTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@{customer.ShopContactNumber}"
                                android:textColor="@color/text_color_main"
                                android:textSize="@dimen/txt_12sp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:paddingBottom="4dp"
                                tools:text="9971380539" />

                            <!-- GST Number -->
                            <TextView android:fontFamily="@font/montserrat_regular"
                                android:id="@+id/gstNumberTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text='@{"GST No : "+customer.gstNo}'
                                android:textColor="@color/text_primary_n_dark"
                                android:textSize="@dimen/txt_12sp"
                                android:layout_marginTop="@dimen/_5dp"
                                android:paddingBottom="4dp"
                                tools:text="GST No : 26895" />

                            <!-- Credit Amount -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5dp"
                                android:orientation="horizontal">
                                <TextView android:fontFamily="@font/montserrat_medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color_main"
                                    android:textSize="@dimen/txt_11sp"
                                    android:text="Address :  "
                                    android:paddingBottom="4dp" />
                                <TextView
                                    android:fontFamily="@font/montserrat_medium"
                                    android:id="@+id/creditAmountTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_primary_n_dark"
                                    android:text="@{customer.address}"
                                    android:paddingBottom="4dp"
                                    android:textStyle="bold"
                                    tools:text="5500.00" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5dp"
                                android:orientation="horizontal">
                                <TextView android:fontFamily="@font/montserrat_medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color_main"
                                    android:textSize="@dimen/txt_11sp"
                                    android:text="Mark :  "
                                    android:paddingBottom="4dp" />
                                <TextView
                                    android:fontFamily="@font/montserrat_medium"
                                    android:id="@+id/tvCustomerMark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_primary_n_dark"
                                    android:text="@{customer.customerMark}"
                                    android:paddingBottom="4dp"
                                    android:textStyle="bold"
                                    tools:text="5500.00" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5dp"
                                android:orientation="horizontal">
                                <TextView android:fontFamily="@font/montserrat_medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color_main"
                                    android:textSize="@dimen/txt_11sp"
                                    android:text="Other :  "
                                    android:paddingBottom="4dp" />
                                <TextView
                                    android:fontFamily="@font/montserrat_medium"
                                    android:id="@+id/tvCustomerOther"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_primary_n_dark"
                                    android:text="@{customer.customerOther}"
                                    android:paddingBottom="4dp"
                                    android:textStyle="bold"
                                    tools:text="5500.00" />
                            </LinearLayout>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="2">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginEnd="@dimen/_10dp"
                                android:weightSum="2">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:id="@+id/ivEdit"
                                    android:src="@android:drawable/ic_menu_edit"
                                    android:padding="@dimen/_10dp"
                                    android:layout_weight="1"/>
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:src="@drawable/trash"
                                    android:padding="@dimen/_10dp"
                                    android:id="@+id/ivDelete"
                                    android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:gravity="end|bottom"
                                android:layout_marginEnd="@dimen/_12dp"
                                android:layout_marginBottom="@dimen/_20dp"
                                android:orientation="vertical">
                                <TextView android:fontFamily="@font/montserrat_medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color_main"
                                    android:textSize="@dimen/txt_11sp"
                                    android:text="Total Sales :  " />
                                <TextView android:fontFamily="@font/montserrat_medium"
                                    android:id="@+id/totalSalesTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_primary_n_dark"
                                    android:layout_marginEnd="@dimen/_10dp"
                                    app:isPriceStringEmpty="@{customer.totalSales}"
                                    tools:text="5500.0000" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_10dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:background="@drawable/corner_four_grey">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:fontFamily="@font/montserrat_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10dp"
                                android:textSize="@dimen/txt_12sp"
                                android:textColor="@color/text_color_main"
                                android:text="Credit Amount : "/>
                            <TextView
                                android:fontFamily="@font/montserrat_medium"
                                android:layout_width="wrap_content"
                                android:id="@+id/tvCurrentStock"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10dp"
                                android:textSize="@dimen/txt_18sp"
                                android:textColor="@color/text_primary_n_dark"
                                android:text="@{customer.creditAmount}"
                                tools:text="200"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:id="@+id/btnAddCredit"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/_20dp"
                                android:layout_marginEnd="@dimen/_5dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginBottom="@dimen/_10dp"
                                app:cardCornerRadius="@dimen/_5dp"
                                app:cardUseCompatPadding="true"
                                android:textStyle="bold"
                                app:cardBackgroundColor="@color/btn_primary_n_dark"
                                android:textColor="@color/text_color_heading"
                                android:gravity="center">

                                <TextView android:fontFamily="@font/montserrat_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Add Credit"
                                    android:textStyle="bold"
                                    android:padding="@dimen/_10dp"
                                    android:gravity="center"
                                    android:textSize="@dimen/txt_14sp"
                                    android:textColor="@color/text_color_heading_reverse"/>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:id="@+id/btnReceiveCredit"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/_5dp"
                                android:layout_marginEnd="@dimen/_20dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:layout_marginBottom="@dimen/_10dp"
                                app:cardCornerRadius="@dimen/_5dp"
                                app:cardUseCompatPadding="true"
                                android:textStyle="bold"
                                app:cardBackgroundColor="@color/green"
                                android:textColor="@color/text_color_heading"
                                android:gravity="center">

                                <TextView android:fontFamily="@font/montserrat_regular"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Recieve Credit"
                                    android:textStyle="bold"
                                    android:padding="@dimen/_10dp"
                                    android:gravity="center"
                                    android:textSize="@dimen/txt_14sp"
                                    android:textColor="@color/text_color_heading_reverse"/>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:tabMode="fixed"
                        android:background="@color/white_n_black"
                        app:tabGravity="fill" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>

</layout>
