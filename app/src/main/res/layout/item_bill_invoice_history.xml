<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.widget.TextView" />

        <import type="android.view.View"/>
        <import type="com.kreativesquadz.hisabkitab.adapter.BindingAdaptersKt" />
        <variable
            name="invoice"
            type="com.kreativesquadz.hisabkitab.model.Invoice" />

        <variable
            name="isReturned"
            type="Boolean" />


    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/txtInvoiceID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/text_color_main"
                        android:textSize="@dimen/txt_13sp"
                        android:text="Invoice : "/>

                    <TextView android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/tvInvoiceID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/txtInvoiceID"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/text_primary_n_dark"
                        android:textSize="@dimen/txt_13sp"
                        android:text='@{invoice.invoiceNumber}'
                        tools:text="2000"/>

                    <TextView android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_primary_n_dark"
                        android:textSize="@dimen/txt_13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="10dp"
                        android:text='@{""+invoice.totalItems}'
                        tools:text="2000"/>

                    <TextView android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/txtitem_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color_main"
                        android:textSize="@dimen/txt_13sp"
                        app:layout_constraintEnd_toStartOf="@+id/item_name"
                        android:text="Items : "/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/txttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/text_color_main"
                        android:textSize="@dimen/txt_13sp"
                        android:text="Time : "/>

                    <TextView android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toEndOf="@+id/txttime"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/text_primary_n_dark"
                        android:textSize="@dimen/txt_13sp"
                        app:timestampToDateTimeTxt="@{invoice.invoiceTime}"
                        tools:text="2000"/>

                    <TextView android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/totalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_primary_n_dark"
                        android:textSize="@dimen/txt_13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="10dp"
                        android:text='@{""+invoice.totalAmount}'
                        tools:text="2000"/>

                    <TextView android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/txttotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color_main"
                        android:textSize="@dimen/txt_13sp"
                        app:layout_constraintEnd_toStartOf="@+id/totalAmount"
                        android:text="Total : "/>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>


            <TextView android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="      Returned      "
                app:hideOnReturned="@{invoice.status}"
                android:rotation="-45"
                android:textSize="10sp"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="-20dp"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                />
            <TextView android:fontFamily="@font/montserrat_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="      Cancelled      "
                app:hideOnReturnedCancel="@{invoice.status}"
                android:rotation="-45"
                android:textSize="10sp"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="-20dp"
                android:textColor="@color/white"
                android:background="@color/red"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
