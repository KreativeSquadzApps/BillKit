<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="invoice"
            type="com.kreativesquadz.billkit.model.Invoice" />

        <variable
            name="returnMode"
            type="String" />
        <variable
            name="amount"
            type="String" />
        <variable
            name="totalGst"
            type="String" />
        <variable
            name="totalAmount"
            type="String" />
        <variable
            name="isRefund"
            type="Boolean" />
        <variable
            name="isButtonActive"
            type="Boolean" />



    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardHeaderView"
                android:layout_margin="@dimen/_10dp"
                android:background="@drawable/corner_four_grey"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/cardHeader"
                    android:paddingTop="@dimen/_20dp"
                    android:paddingStart="@dimen/_10dp"
                    android:paddingEnd="@dimen/_10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/txtInvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_color_main"
                        android:textSize="@dimen/txt_16sp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Invoice : " />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/tvInvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_16sp"
                        app:layout_constraintStart_toEndOf="@id/txtInvoice"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@{invoice.invoiceNumber}"
                        tools:text="777"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/txtTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_color_main"
                        android:textSize="@dimen/txt_16sp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintEnd_toStartOf="@id/tvTotal"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Total : " />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_16sp"
                        android:layout_marginEnd="@dimen/_10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@{invoice.totalAmount}"
                        tools:text="300"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/txtItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_main"
                        android:textSize="@dimen/txt_16sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtInvoice"
                        android:text="Items : " />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/tvItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_16sp"
                        app:layout_constraintStart_toEndOf="@id/txtItems"
                        app:layout_constraintTop_toTopOf="@+id/txtItems"
                        android:text="@{invoice.totalItems}"
                        tools:text="3"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/txtDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_main"
                        android:textSize="@dimen/txt_16sp"
                        android:layout_marginStart="10dp"
                        app:layout_constraintEnd_toStartOf="@id/tvDiscount"
                        app:layout_constraintTop_toTopOf="@+id/tvDiscount"
                        android:text="Discount : " />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:fontFamily="@font/montserrat_bold"
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_16sp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTotal"
                        android:text="@{invoice.discount}"
                        tools:text="100"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintTop_toBottomOf="@+id/cardHeaderView"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/item_sale_return"
                tools:itemCount="1" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bottomView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView"
                android:layout_marginTop="@dimen/_10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:text="Amount :  "
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/txt_16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/tvAmount"
                    app:layout_constraintTop_toTopOf="@+id/tvAmount" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:text="@{amount}"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/txt_16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="RS 300" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/montserrat_bold"
                    android:id="@+id/txtReduceDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:text="Reduce Discount :  "
                    android:visibility="@{invoice.discount==null||invoice.discount==0 ? View.GONE : View.VISIBLE }"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/etReduceDiscount"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/etReduceDiscount"
                    app:layout_constraintBottom_toBottomOf="@+id/etReduceDiscount"/>


                <EditText
                    android:id="@+id/etReduceDiscount"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_outline_view"
                    android:inputType="number"
                    android:visibility="@{invoice.discount==null||invoice.discount==0 ? View.GONE : View.VISIBLE }"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtReduceDiscount"
                    app:layout_constraintTop_toBottomOf="@+id/tvAmount" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/txtTotalGst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:text="Total GST :  "
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/tvTotalGst"
                    app:layout_constraintTop_toTopOf="@+id/tvTotalGst" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/tvTotalGst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:text="@{totalGst}"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/etReduceDiscount"
                    tools:text="RS 300" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/txtTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:text="Total Amount :  "
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/tvTotalAmount"
                    app:layout_constraintTop_toTopOf="@+id/tvTotalAmount" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:text="@{totalAmount}"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalGst"
                    tools:text="RS 300" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/txtReturnMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:text="Return Mode :  "
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/txt_16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/etReturnMode"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/etReturnMode"
                    app:layout_constraintBottom_toBottomOf="@+id/etReturnMode"/>



                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etReturnMode"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtReturnMode"
                    app:layout_constraintTop_toBottomOf="@+id/tvTotalAmount">

                    <AutoCompleteTextView
                        android:id="@+id/dropdownReturnMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_15dp"
                        android:inputType="none"
                        android:text="CreditNote" />
                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:fontFamily="@font/montserrat_medium"
                    android:id="@+id/txtReturnModeOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:text="Return Mode :  "
                    android:textColor="@color/text_color_main"
                    android:textSize="@dimen/txt_16sp"
                    android:textStyle="bold"
                    android:visibility="@{isRefund ? View.VISIBLE : View.GONE}"
                    android:layout_marginStart="@dimen/_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/etReturnModeOption"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/etReturnModeOption"
                    app:layout_constraintBottom_toBottomOf="@+id/etReturnModeOption"/>



                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/etReturnModeOption"
                    android:visibility="@{isRefund ? View.VISIBLE : View.GONE}"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/txtReturnModeOption"
                    app:layout_constraintTop_toBottomOf="@+id/etReturnMode">

                    <AutoCompleteTextView
                        android:id="@+id/dropdownReturnModeOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_15dp"

                        android:inputType="none"
                        android:text="Cash" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/btnAdd"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_20dp"
                    app:layout_constraintTop_toBottomOf="@+id/etReturnModeOption"
                    app:cardUseCompatPadding="true"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    app:cardBackgroundColor="@{isButtonActive ? @color/colorPrimary : @color/lite_grey_200}"
                    tools:cardBackgroundColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_heading"
                    android:gravity="center">

                    <TextView android:fontFamily="@font/montserrat_medium"
                        android:layout_width="match_parent"
                        android:id="@+id/tv_update"
                        android:layout_height="match_parent"
                        android:text="@{returnMode}"
                        android:padding="@dimen/_15dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/text_color_heading_reverse"
                        tools:text="REFUND"/>
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:indeterminate="true"
                        android:visibility="gone"
                        style="?android:attr/progressBarStyleHorizontal"/>

                </androidx.cardview.widget.CardView>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</layout>

