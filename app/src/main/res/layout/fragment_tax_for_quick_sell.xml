<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="isUpdateEnabled"
            type="Boolean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_n_black"
        android:orientation="vertical">
        <TextView
            android:fontFamily="@font/montserrat_medium"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:textSize="@dimen/txt_16sp"
            android:layout_marginTop="@dimen/_20dp"
            android:textColor="@color/text_primary_n_dark"
            android:text="Default Tax for QuickSale"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginBottom="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:id="@+id/taxView"
            >

            <AutoCompleteTextView
                android:id="@+id/dropdownTaxType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="none"
                android:hint="Default Tax Type" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_tax_add_products"
            tools:itemCount="1" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/btnAdd"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5dp"
            app:cardUseCompatPadding="true"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            app:cardBackgroundColor="@{isUpdateEnabled ? @color/colorPrimary : @color/lite_grey_200}"
            android:textColor="@color/text_color_heading"
            tools:cardBackgroundColor="@color/colorPrimary"
            android:gravity="center">

            <TextView android:fontFamily="@font/montserrat_regular"
                android:layout_width="match_parent"
                android:id="@+id/iv_equals"
                android:layout_height="match_parent"
                android:text="Update"
                android:padding="@dimen/_10dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/text_color_heading_reverse"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</layout>