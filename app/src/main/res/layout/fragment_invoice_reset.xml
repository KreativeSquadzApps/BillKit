<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data>
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:padding="@dimen/_10dp"
                    android:background="@drawable/corner_four_grey">

                    <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize= "@dimen/txt_20sp"
                        android:id="@+id/tvInvoicePrefix"
                        android:textColor="@color/text_primary_n_dark"
                        tools:text="uuu"/>

                    <TextView
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize= "@dimen/txt_12sp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:textColor="@color/text_color_main"
                        android:text="Invoice Prefix"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_20dp"
                    android:padding="@dimen/_10dp"
                    android:background="@drawable/corner_four_grey">

                    <TextView
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize= "@dimen/txt_20sp"
                        android:id="@+id/tvInvoiceNumber"
                        android:textColor="@color/text_primary_n_dark"
                        tools:text="uuu"/>

                    <TextView
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize= "@dimen/txt_12sp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:textColor="@color/text_color_main"
                        android:text="Invoice Number"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize= "@dimen/txt_16sp"
                android:layout_marginTop="@dimen/_25dp"
                android:textColor="@color/text_color_main"
                android:text="Change Invoice Series."/>

                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize= "@dimen/txt_14sp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:textColor="@color/text_color_main"
                        android:text="Invoice Prefix"/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="none"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter new Invoice Prefix"
                    android:id="@+id/etInvoicePrefix"/>
            </com.google.android.material.textfield.TextInputLayout>


        <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize= "@dimen/txt_14sp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:textColor="@color/text_color_main"
                        android:text="Invoice Number"/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="none"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter new Invoice Number"
                    android:id="@+id/etInvoiceNumber"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Update"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:id="@+id/btnUpdate"
                android:textSize="@dimen/txt_18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_25dp" /> <!-- Add handler for submit action -->

            <TextView
                android:fontFamily="@font/montserrat_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize= "@dimen/txt_16sp"
                android:layout_marginTop="@dimen/_25dp"
                android:textColor="@color/text_color_main"
                android:text="Old Invoice Series."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/corner_four_stroke">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_10dp"
                    android:background="@drawable/corner_top_grey_solid"
                    android:weightSum="3">

                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize= "@dimen/txt_14sp"
                        android:layout_weight="2"
                        android:layout_marginStart="@dimen/_10dp"
                        android:textColor="@color/text_color_main"
                        android:text="Invoice Prefix"/>
                    <TextView
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize= "@dimen/txt_14sp"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_10dp"
                        android:textColor="@color/text_color_main"
                        android:text="Invoice Number"/>


                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerView"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_invoice_prefix_number"
                    tools:itemCount="3"/>


            </LinearLayout>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


</layout>