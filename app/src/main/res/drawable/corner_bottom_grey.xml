<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle" android:drawable="@color/lite_grey_200" >
            <corners android:bottomLeftRadius="@dimen/_10dp" android:bottomRightRadius="@dimen/_10dp" /> <!-- Adjust the corner radius as needed -->
            <stroke
                android:width="2dp" android:color="@color/lite_grey" />
        </shape>
    </item>

    <!-- Border (stroke) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/_10dp" android:bottomRightRadius="@dimen/_10dp" /> <!-- Adjust the corner radius as needed -->
            <stroke
                android:width="2dp" android:color="@color/lite_grey" />
        </shape>
    </item>
</layer-list>